<!DOCTYPE html>
<html ng-app="suite.app">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>

        <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Dancing+Script' rel='stylesheet' type='text/css'>

        <!-- CreateUserSubmitButton -->
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset("css/style.css") }}">
        {% endblock %}

        <script type="text/ng-template" id="globalError.html">
            <div class="GlobalErrors" ng-model="globalErrors.errors" ng-repeat="error in globalErrors.errors" ng-show="globalErrors.show">
                <label class="GlobalError">{[{ error }]}</label>
            </div>
        </script>

        <script type="text/ng-template" id="actionSubmit.html">
            <div class="ActionSubmitDirective">
                <input type="submit" value="{[{ action.textValue }]}" class="FormRow--submitButton  BasicSubmitButton  {[{ action.userSpecificClasses }]}"
                       ng-click="action.submit($event)"
                        ng-disabled="(action.finished && action.awaiting) || action.awaiting"/>
                <p class='Action  {[{ action.awaitClasses }]}'
                   ng-model='action.awaiting'
                   ng-show='(action.finished && action.awaiting) || action.awaiting'>{[{ action.message }]}</p>
            </div>
        </script>

    </head>
    <body>
        <div class="Global">
            <header class="Global__Header">
                <nav class="Container  MainNavigation">
                    <ul class="MainNavigation__List">
                        <li><a href="{{ path('app_authorized_home') }}" class="List--navigationLink"></a></li>
                    </ul>

                    <div class="UserInfo">
                        <span class="UserInfo--userIcon"></span>
                        <button class="UserInfo--mail">{{ model.getModelData('username') }}</button>

                        <div class="TestListPopup">

                            <div class="PopupProfile">
                                {% if model.isInRole('ROLE_USER_MANAGER') %}
                                    <a href="{{ path('app_authorized_createUserGet') }}" class="Profile--choiceLink">Create admin/user<span class="PopupIcons  AddUserIcon"></span></a>
                                {% endif %}
                                {% if model.isInRole('ROLE_USER_MANAGER') %}
                                    <a href="{{ path('app_authorized_userManagment') }}" class="Profile--choiceLink">User managment<span class="PopupIcons  AddUserIcon"></span></a>
                                {% endif %}
                                <a href="" class="Profile--choiceLink">Edit profile<span class="PopupIcons  EditProfileIcon"></span></a>
                                <a href="{{ path('logout') }}" class="Profile--choiceLink">Logout<span class="PopupIcons  LogoutIcon"></span></a>
                            </div>
                        </div>
                    </div>
                </nav>
            </header>

            {% block content %}{% endblock %}
        </div>

        {% block javascript %}
            <script type="text/javascript" src="{{ asset("bower_components/ace-builds/src-min-noconflict/ace.js") }}"></script>
            <script type="text/javascript" src="{{ asset("bower_components/jquery/dist/jquery.min.js") }}"></script>
            <script type="text/javascript" src="{{ asset("bower_components/angular/angular.min.js") }}"></script>
            <script type="text/javascript" src="{{ asset("js/directives.js") }}"></script>
            <script type="text/javascript" src="{{ asset("js/factories.js") }}"></script>
            <script type="text/javascript" src="{{ asset("js/suit.js") }}"></script>
        {% endblock %}
    </body>
</html>
